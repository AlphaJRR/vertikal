rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Founding 50 invites collection - read-only for validation
    match /founding50_invites/{inviteId} {
      allow read: if true; // Allow reading for validation
      allow write: if false; // Only admins can write via Admin SDK
    }
    
    // Creators collection
    match /creators/{creatorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == creatorId;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


